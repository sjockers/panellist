<li class="panellist__panel {{ model.className }}" style="{{ model.position.styleDefinition }}">
  <div class="panellist__panel-inner" style="
    background: {{ model.background }};
    opacity: {{ opacity }};
    top: {{ top }}px;
    right: {{ right }}px;">
    <img class="panellist__image" src='{{ model.image }}' />
    <ul class="panellist__subpanels" data-hook="subpanels"></ul>
    <ul class="panellist__captions" data-hook="captions"></ul>
  </div>
</li>
